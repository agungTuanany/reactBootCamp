import React,{ Component } from 'react';

import './App.css'

class App extends Component {
  constructor(props) {
    super(props);

    this.state = {
      // if the value is false it will not render the title
      shouldRenderTitle: true
    }

  }

  renderTitle() {
    if (!this.state.shouldRenderTitle) {return null; }

    return <h1>Title</h1>
  }

  render() {
    return (
      <div className="App">
      </div>
    );
  }
}

export default App;
